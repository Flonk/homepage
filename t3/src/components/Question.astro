---
import { codeToHtml } from 'shiki';

interface Props {
  n: number;
  question: string;
  children: any;
  multiline?: boolean;
  lang?: string;
}

const { n, question, multiline = true, lang = 'typescript' } = Astro.props;

let highlightedCode = question;
if (multiline && lang) {
  highlightedCode = await codeToHtml(question, {
    lang,
    theme: 'one-dark-pro',
  });
}
---

<div class="qa-wrapper">
  <div class="question">
    <div class="question-header">
      <strong>Question {n}:</strong>
      <button class="spoiler-button" onclick="
        const content = this.closest('.qa-wrapper').querySelector('.spoiler-content');
        const isRevealed = content.classList.toggle('revealed');
        this.textContent = isRevealed ? 'Hide solution' : 'Show solution';
      ">
        Show solution
      </button>
    </div>
    <div class="question-text">
      {multiline ? (
        <div class="question-code" set:html={highlightedCode} />
      ) : (
        <code>{question}</code>
      )}
    </div>
  </div>
  <div class="spoiler-content">
    <slot />
  </div>
</div>

<style>
  .qa-wrapper {
    margin: 1em;
    border: 1px solid #444;
    border-radius: 6px;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .qa-wrapper {
      margin: 1em 0;
      border-radius: 0;
      border-left: none;
      border-right: none;
    }
  }

  .question {
    padding: 0.75em 1em;
    background-color: rgba(0, 0, 0, 0.2);
  }

  .question-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5em;
  }

  .question-text {
    margin-bottom: 0;
  }

  @media (min-width: 769px) {
    .question-header {
      margin-bottom: 0.5em;
    }
    
    .question-text {
      margin-bottom: 0.5em;
    }
    
    .question-actions {
      display: flex;
      justify-content: flex-start;
    }
  }

  .spoiler-button {
    background-color: #333;
    color: #fff;
    border: 1px solid #555;
    padding: 0.3em 0.8em;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.85em;
    transition: background-color 0.2s ease;
    white-space: nowrap;
  }

  .question-code {
    margin: 0;
    overflow-x: auto;
  }

  .question-code :global(pre) {
    margin: 0;
    padding: 0.5rem;
    background-color: rgba(255, 255, 255, 0.05) !important;
    border-radius: 4px;
    overflow-x: auto;
    font-family: var(--font-mono, monospace);
    font-size: 0.95em;
  }

  .spoiler-button:hover {
    background-color: #555;
  }

  .spoiler-content {
    display: none;
    padding: 1rem 0.5rem;
    border-top: 1px solid #444;
    background-color: rgba(0, 0, 0, 0.4);
  }

  .spoiler-content :global(pre) {
    padding: 0.5rem;
    background-color: rgba(255, 255, 255, 0.05) !important;
  }

  .spoiler-content.revealed {
    display: block;
  }
</style>

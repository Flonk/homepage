---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.index-wrapper {
				/* desktop can stay as-is */
			}

			ul {
				display: flex;
				flex-direction: column;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}

			@media (max-width: 768px) {
				.index-wrapper {
					padding: 0 1.5rem;
					box-sizing: border-box;
				}

				ul {
					gap: 1.8rem;
				}

				li a {
					display: flex;
					flex-direction: column;
				}
			}
			
			ul li * {
				text-decoration: none;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a > * { display: inline; }
			.title {
				margin: 0;
				color: var(--nord4);
			}

			a:hover .title {
				color: inherit;
			}

			.date {
				margin: 0;
				color: var(--nord3);
			}

			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="index-wrapper">
				<h2>Blog</h2>
				<ul>
					{
						posts.map((post) => (
							<li data-pubdate={post.data.pubDate.valueOf()}>
								<a href={`/blog/${post.id}/`}>
									<span class="date">
										[<FormattedDate date={post.data.pubDate} />]
									</span>
									<header class="title">{post.data.title}</header>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
	<script>
		(function () {
			const items = document.querySelectorAll('li[data-pubdate]');
			if (!items.length) return;

			const now = new Date();
			const todayLocal = new Date(
				now.getFullYear(),
				now.getMonth(),
				now.getDate(),
			).getTime();

			items.forEach((li) => {
				const ms = Number(li.getAttribute('data-pubdate'));
				if (!Number.isFinite(ms)) return;

				const d = new Date(ms);
				const postLocalDay = new Date(
					d.getFullYear(),
					d.getMonth(),
					d.getDate(),
				).getTime();

				if (postLocalDay > todayLocal) {
					li.style.display = 'none';
				}
			});
		})();
	</script>
	</body>
</html>
